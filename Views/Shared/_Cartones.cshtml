@model List<Carton>

@{
    foreach (Carton carton in Model) {
        <div class="mt-5 container px-5 border" style="width:800px">
            @{
                for (int f = 0; f < 3; f++) {
                    <div class="row border bg-light">
                        @{
                            for (int c = 0; c < 9; c++) {
                                <div class="col numero">
                                    @if (carton.Matriz[f, c].Numero == 0) {
                                        <p> </p>
                                    } else {
                                        @if (carton.Matriz[f, c].Acertado) {
                                            <p style="background-color: red">@carton.Matriz[f, c].Numero</p>
                                        } else {
                                            <p style="background-color: gray">@carton.Matriz[f, c].Numero </p>
                                        }
                                    }
                                </div>
                            }
                        }
                    </div>
                }
            }
        </div>
    }//foreach carton
}